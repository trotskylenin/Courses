<h1> Cursos de <%= @term  %> en Coursera </h1>
<table border="1">
  <tr>
    <th>Image</th>
    <th>Name</th>
    <th>Description</th>
  </tr>
  <% if @courses != nil %>
    <% @courses.each do |course| %>
      <tr class="<%= cycle('even', 'odd') %>">
        <td><%= image_tag(course["smallIcon"]) %></td>
        <td><%= course["name"] %></td>
        <td><%= course["shortDescription"] %></td>
      </tr>
    <% end %>
  <% else %>
    <tr class="odd">
      <td>Nothing</td>
      <td>Nothing</td>
      <td>Nothing</td>
    </tr>
  <% end %>
